<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:padding="7dp">
  <LinearLayout
      android:orientation="vertical"
      android:minWidth="25px"
      android:minHeight="25px"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/linearLayout1"
      android:background="#ffd7ccc8">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
      <TextView
          android:text="Screen Page"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/textView1"
          android:background="#ff000000"
          android:textColor="#fffdf2f2"
          android:textStyle="bold"
          android:textSize="40dp"
          android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="175.0dp"
        android:id="@+id/linearLayout3"
        android:padding="10dp"
        android:background="#ffda7575"
        android:layout_margin="7dp">
            <TextView
                android:text="Display your information!"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="126.5dp"
                android:id="@+id/show"
                android:textStyle="bold"
                android:layout_margin="7dp"
                android:padding="5dp"
                android:background="#fff7f3f3"
                android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:padding="10dp"
        android:background="#ffda7575"
        android:layout_margin="7dp"
        android:gravity="center">
      <Button
          android:text="Logout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/logout" />
     <Button
          android:text="Control"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/control" />
      <Button
          android:text="close"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/close" />
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>